 {
	"lint"   : {
		"html"    : false,
		
		"scripts" : {
			"app"    : true,
			"libs"   : false,
			"plugin" : false
		},

		"styles"  : false	
	},

	"concat" : {
		"html"    : false,

		"scripts" : {
			"app"    : true,
			"libs"   : false,
			"plugin" : false
		},

		"styles"  : true	
	},
	
	"uglify" : {
		"html"    : false,

		"scripts" : {
			"app"    : true,
			"libs"   : false,
			"plugin" : false
		},

		"styles"  : true
	},
	
	"uglify_option":{
		"mangle"           : false,
		"preserveComments" : "some"
	},

	"rename" : {
		"html"    : false,

		"scripts" : {
			"app"    : true,
			"libs"   : false,
			"plugin" : false
		},
		
		"styles"  : true	
	},
	
	"rename_option":{
		"suffix" : ".min"
	},

	"path":{
		"dist":"public/dist/",

		"js":{
			"src":{
				"app"        : "public/src/js/app/",
				"libs"       : "public/src/js/libs/*.js",
				"plugin"     : "public/src/js/plugin/*.js"
			},

			"dest":{
				"app"        : "public/dist/js/app/",
				"libs"       : "public/dist/js/libs/",
				"plugin"     : "public/dist/js/plugin/"
			},

			"result" : "scripts.js"
		},

		"css":{
			"src"    : "public/src/css/*.css",
			"dest"   : "public/dist/css/",
			"result" : "style.css"
		},

		"html":{
			"src"    : "public/src/html/*.html",
			"dest"   : "public/dist/html/"
		},

		"images":{
			"src"    : "public/src/images/*",
			"dest"   : "public/dist/images/"
		}
	}
}